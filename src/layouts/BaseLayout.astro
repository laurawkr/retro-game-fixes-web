---
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <!-- Google AdSense (same as your old page) -->
    <script async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6319637311271773"
      crossorigin="anonymous">
    </script>

    <style>
      body {
        background: #0b0b0b;
        color: #e0e0e0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
      }
      h1 {
        font-family: monospace;
        color: #8aff8a;
      }
      a {
        color: #8affff;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      .card {
        border: 1px solid #333;
        padding: 1rem;
        margin: 1.5rem 0;
        background: #111;
      }
      .site-footer {
        margin-top: 2rem;
        font-size: 0.8rem;
        color: #aaa;
      }
    </style>
  </head>
  <body>
    <slot />

