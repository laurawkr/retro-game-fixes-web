---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Retro Game Fixes";
const description =
  "Explore classic PC games like a theme park. Each game is its own island.";
---

<BaseLayout {title} {description}>
  <div class="map-frame">
    <h1 class="map-title">Retro Game Fixes</h1>
    <p class="map-subtitle">
      Choose an island to explore
    </p>

    <div class="map-container">
      <!-- Harry Potter Island -->
      <a
        href="/guides/harry-potter-sorcerers-stone"
        class="island island-hp"
      >
        <span class="island-label">
          Harry Potter<br />
          Sorcerer’s Stone
        </span>
      </a>

      <!-- Planned Islands -->
      <div class="island island-sims locked">
        <span class="island-label">The Sims</span>
      </div>

      <div class="island island-themepark locked">
        <span class="island-label">Sim Theme Park</span>
      </div>

      <div class="island island-golf locked">
        <span class="island-label">Sim Golf</span>
      </div>
    </div>

    <footer class="map-footer">
      <a href="/about">About</a> ·
      <a href="/privacy-policy">Privacy Policy</a>
      <p>© {new Date().getFullYear()} caferacergames.com</p>
    </footer>
  </div>
</BaseLayout>
