---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Retro Game Fixes";
const description =
  "Modern fixes for classic PC games — no ISOs, no nonsense.";
---

<BaseLayout {title} {description}>
  <div class="game-frame">
    <header class="hero">
      <h1 class="hero-title">Retro Game Fixes</h1>
      <p class="hero-subtitle">
        Modern fixes for classic PC games — no ISOs, no nonsense.
      </p>
    </header>

    <section class="panel-grid">
      <div class="panel">
        <h2>Currently Researching</h2>
        <ul class="panel-list">
          <li>
            <a href="/guides/harry-potter-sorcerers-stone">
              Harry Potter and the Sorcerer’s Stone (PC)
            </a>
          </li>
        </ul>
      </div>

      <div class="panel">
        <h2>Planned Guides</h2>
        <ul class="panel-list">
          <li>The Sims</li>
          <li>Sim Theme Park</li>
          <li>Sim Golf</li>
          <li>Sim Safari</li>
          <li>SimIsle</li>
        </ul>
      </div>

      <div class="panel">
        <h2>What This Site Is</h2>
        <p>
          Step-by-step compatibility fixes for classic PC games on modern
          Windows. Wrappers, patches, configs — nothing distributed.
        </p>
        <p class="panel-link">
          <a href="/about">Read more →</a>
        </p>
      </div>
    </section>

    <footer class="retro-footer">
      <p>
        <a href="/about">About</a> ·
        <a href="/privacy-policy">Privacy Policy</a>
      </p>
      <p>&copy; {new Date().getFullYear()} caferacergames.com</p>
    </footer>
  </div>
</BaseLayout>
